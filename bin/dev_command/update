#!/bin/bash

docker images | grep -vE '(REPOSITORY|<none>)' | awk '{ print $1":"$2; }' | \
    while read a; do

    # Get latest release
    docker pull $a 2>/dev/null;

done

docker images | grep '<none>' | awk '{ print $3; }' | \
    while read a; do

    # Removed unamed images
    docker rmi $a;

done
